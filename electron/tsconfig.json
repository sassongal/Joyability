{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist-electron",
    "rootDir": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "resolveJsonModule": true,
    "allowJs": false,
    "types": [
      "node",
      "electron"
    ],
    "sourceMap": true
  },
  "include": [
    "./**/*.ts"
  ]
}
